generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ──────────────────────────────────────────────
// Enums
// ──────────────────────────────────────────────

enum UserRole {
  CLIENT
  WORKER
  ADMIN
}

enum JobStatus {
  OPEN
  ASSIGNED
  IN_PROGRESS
  REVIEW
  COMPLETED
  CANCELLED
  DISPUTED
}

enum MilestoneStatus {
  PENDING
  FUNDED
  IN_PROGRESS
  REVIEW
  COMPLETED
  DISPUTED
}

enum ProposalStatus {
  PENDING
  ACCEPTED
  REJECTED
  WITHDRAWN
}

enum TransactionType {
  DEPOSIT
  ESCROW_LOCK
  RELEASE
  PLATFORM_FEE
  WITHDRAWAL
  REFUND
}

// ──────────────────────────────────────────────
// Models
// ──────────────────────────────────────────────

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  fullName  String   @map("full_name")
  role      UserRole @default(CLIENT)
  language  String   @default("en") @db.VarChar(5)
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  wallet          Wallet?
  clientJobs      Job[]      @relation("ClientJobs")
  workerJobs      Job[]      @relation("WorkerJobs")
  proposals       Proposal[]

  @@map("users")
}

model Wallet {
  id               String   @id @default(uuid()) @db.Uuid
  userId           String   @unique @map("user_id") @db.Uuid
  availableBalance Decimal  @default(0) @map("available_balance") @db.Decimal(12, 2)
  frozenBalance    Decimal  @default(0) @map("frozen_balance") @db.Decimal(12, 2)
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@map("wallets")
}

model Job {
  id          String    @id @default(uuid()) @db.Uuid
  clientId    String    @map("client_id") @db.Uuid
  workerId    String?   @map("worker_id") @db.Uuid
  title       String    @db.VarChar(255)
  category    String    @db.VarChar(100)
  description String    @db.Text
  totalBudget Decimal   @map("total_budget") @db.Decimal(12, 2)
  deadline    DateTime?
  status      JobStatus @default(OPEN)
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  client     User        @relation("ClientJobs", fields: [clientId], references: [id])
  worker     User?       @relation("WorkerJobs", fields: [workerId], references: [id])
  milestones Milestone[]
  proposals  Proposal[]

  @@index([clientId])
  @@index([workerId])
  @@index([status])
  @@map("jobs")
}

model Milestone {
  id        String          @id @default(uuid()) @db.Uuid
  jobId     String          @map("job_id") @db.Uuid
  order     Int
  title     String          @db.VarChar(255)
  amount    Decimal         @db.Decimal(12, 2)
  status    MilestoneStatus @default(PENDING)
  createdAt DateTime        @default(now()) @map("created_at")
  updatedAt DateTime        @updatedAt @map("updated_at")

  job          Job           @relation(fields: [jobId], references: [id], onDelete: Cascade)
  transactions Transaction[]

  @@unique([jobId, order])
  @@map("milestones")
}

model Proposal {
  id             String         @id @default(uuid()) @db.Uuid
  jobId          String         @map("job_id") @db.Uuid
  workerId       String         @map("worker_id") @db.Uuid
  coverLetter    String         @map("cover_letter") @db.Text
  proposedAmount Decimal        @map("proposed_amount") @db.Decimal(12, 2)
  status         ProposalStatus @default(PENDING)
  createdAt      DateTime       @default(now()) @map("created_at")
  updatedAt      DateTime       @updatedAt @map("updated_at")

  job    Job  @relation(fields: [jobId], references: [id], onDelete: Cascade)
  worker User @relation(fields: [workerId], references: [id])

  @@unique([jobId, workerId])
  @@index([workerId])
  @@map("proposals")
}

model Transaction {
  id            String          @id @default(uuid()) @db.Uuid
  walletId      String          @map("wallet_id") @db.Uuid
  milestoneId   String?         @map("milestone_id") @db.Uuid
  type          TransactionType
  amount        Decimal         @db.Decimal(12, 2)
  referenceNote String?         @map("reference_note") @db.VarChar(500)
  createdAt     DateTime        @default(now()) @map("created_at")

  wallet    Wallet     @relation(fields: [walletId], references: [id])
  milestone Milestone? @relation(fields: [milestoneId], references: [id])

  @@index([walletId])
  @@index([milestoneId])
  @@index([type])
  @@map("transactions")
}
